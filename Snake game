#include <iostream>
#include <conio.h>
#include <cstdlib>
using namespace std;
bool gameover;
const int width = 20;
const int height = 20;
int x, y, fruitX, fruitY, score;// variables for the head positon (x and y) and fruit;
enum edirection {Stop = 0, Left, Right, Up, Down};
edirection dir;
void setup() {
	gameover = false;
	dir = Stop;
	x = width / 2;
	y = height / 2;
	fruitX = rand() % width;
	fruitY =  rand() % height;
	score = 0;
}

void draw() {
	system("cls");//clear command screen;
	for (int i = 0; i < width + 2; i++) {
		cout << "#";
	}// Displays the top wall of the map;
	cout << endl;

	for (int i = 0; i < height; i++) {
		for (int j = 0; j < width; j++) {
			if (j == 0) {
				cout << "#";
			}
			if (i == y && j == x) {
				cout << "O";
			}
			else if (i == fruitX && j == fruitY) {
				cout << "F";
			}
			else
				cout << " ";
			if (j == width - 1)// This is just the end of the width or the right side of the wall
				cout << "#";
		}
		cout << endl;
	}

	for (int i = 0; i < width + 2; i++) {
		cout << "#";
	}//Displays the bottom wall;
	cout << endl;
}

void input() {
	if (_kbhit()) {
		switch (_getch()) {
		case 'a':
			dir = Left;
			break;
		case 'd':
			dir = Right;
			break;
		case 's':
			dir = Down;
			break;
		case 'w':
			dir = Up;
			break;
		case 'x':
			gameover = true;
			break;
		}
	}
}
//_kbhit return boolean; if the keyboard is pressed then it will return positive number and if nothing is pressed it will return 0;
void logic() {
	switch (dir) {
	case Left:
		x--;
		break;
	case Right:
		x++;
		break;
	case Up:
		y--;
		break;
	case Down:
		y++;
		break;
	}
	if (x > width || x < 0 || y > height || y < 0)
		gameover = true;
	if (x == fruitX && y == fruitY) {
		score += 10;
		fruitX = rand() % width;
		fruitY = rand() % height;
	}
}

int main() {
	setup();
	while (!gameover) {
		draw();
		input();
		logic();
	}
}
